<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}">

                     <label for="">Brand</label>
                    <input type="text" name="Brand" class="form-control" value="{{product.Brand}}">

                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control" value="{{product.Price}}">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}">

                    <label for="">Stock</label>
                    <input type="text" name="Stock" class="form-control" value="{{product.Stock}}">

                    <label for="">Image-1</label>
                    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px;height:auto">
                    <input type="file" name="Image" class="form-control">

                    <label for="">Image-2</label>
                    <img src="/product-images2/{{product._id}}.jpg" alt="" style="width: 100px;height:auto">
                    <input type="file" name="Image2" class="form-control">

                    <label for="">Image-3</label>
                    <img src="/product-images3/{{product._id}}.jpg" alt="" style="width: 100px;height:auto">
                    <input type="file" name="Image3" class="form-control">


                    <select name="Category" class="form-select mt-3 bg-primary text-center text-white w-100"
                        aria-label="Default select example">
                        <option selected>{{product.Category}}</option>
                        {{#each category}}
                        <option>{{this.name}}</option>
                        {{/each}}

                    </select>
                    <select name="Subcategory" class="form-select mt-3 bg-primary text-center text-white w-100"
                        aria-label="Default select example" value="{{product.Subcategory}}">
                        <option selected>{{product.Subcategory}}</option>
                        {{#each subcategory}}
                        <option>{{this.name}}</option>
                        {{/each}}


                    </select>

                    <button type="submit" class="btn btn-success mt-4 w-100">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>