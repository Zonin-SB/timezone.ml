<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img style="width: 450px;" src="/img/signup-nobg.png" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form action="/signup" method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-2">
                        <input type="text" name="Name" id="form1Example13" class="form-control form-control-lg"
                            required />
                        <label class="form-label" for="form1Example13">Username</label>
                    </div>
                    <div class="form-outline mb-2">
                        <input type="email" name="Email" id="form1Example13" class="form-control form-control-lg"
                            required />
                        <label class="form-label" for="form1Example13">Email address</label>
                    </div>
                    <div class="form-outline mb-2">
                        <input type="text" name="Mobile" id="form1Example13" class="form-control form-control-lg"
                            required />
                        <label class="form-label" for="form1Example13">Mobile No:</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-2">
                        <input type="password" name="Password" id="form1Example23" class="form-control form-control-lg"
                            required />
                        <label class="form-label" for="form1Example23">Password</label>
                    </div>

                     {{#if eFound}}
                    <p style="color: red;">This Email already exists..!!</p>
                    {{/if}}

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-info btn-lg btn-block">Signup</button>
                    <br>
                   
                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Already have an account? <a href="/login"
                            style="color: red;"><b>Login</b></a></p>








                </form>
            </div>
        </div>
    </div>
</section>