<section>
    <div class="container">
        <div class="row mt-5">
            <h3>All Orders</h3>

        </div>

       


        <div class="table table-responsive mt-5">

            <table class="data-table table hover multiple-select-row nowrap" id="myTable">
               
                
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>


                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.date}}</td>
                        <td>Rs {{this.totalPrice}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>Order {{this.status}}</td>
                        <td>

                            {{!-- view the ordered products --}}
                            <a href="/view-ordered-products/{{this._id}}" class="btn btn-success ">View Details</a>


                            <!-- cancel the order -->
                            {{#if this.delivered}}
                            <a class="btn btn-danger" style="color: white;" data-toggle="modal"
                                data-target="#exampleModalReturn{{this._id}}">
                                Return
                            </a>
                            {{else}}

                            <a class="btn btn-danger" style="color: white;" data-toggle="modal"
                                data-target="#exampleModalCancel{{this._id}}">
                                Cancel
                            </a>
                            {{/if}}


                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCancel{{this._id}}" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to cancel the order?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>
                                            <a href="/cancelOrder/{{this._id}}" class="btn btn-danger">Confirm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalReturn{{this._id}}" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to Return the product?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>
                                            <a href="/returnOrder/{{this._id}}" class="btn btn-danger">Confirm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>




                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

